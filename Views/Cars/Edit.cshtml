@model identityApp.Models.Car

@{
    ViewData["Title"] = "Araç Düzenle";
}

<h1>Araç Düzenle</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Araç Bilgileri</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Brand" class="control-label">Marka</label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Model" class="control-label">Model</label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Year" class="control-label">Yıl</label>
                                <input asp-for="Year" class="form-control" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Color" class="control-label">Renk</label>
                                <input asp-for="Color" class="form-control" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Mileage" class="control-label">Kilometre</label>
                                <input asp-for="Mileage" class="form-control" />
                                <span asp-validation-for="Mileage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Price" class="control-label">Fiyat (₺)</label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DiscountPercentage" class="control-label">İndirim (%) (opsiyonel)</label>
                                <input asp-for="DiscountPercentage" class="form-control" />
                                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="EngineSize" class="control-label">Motor Hacmi</label>
                                <input asp-for="EngineSize" class="form-control" />
                                <span asp-validation-for="EngineSize" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="FuelType" class="control-label">Yakıt Tipi</label>
                                <select asp-for="FuelType" class="form-control">
                                    <option value="">Seçiniz</option>
                                    <option value="Benzin">Benzin</option>
                                    <option value="Dizel">Dizel</option>
                                    <option value="LPG">LPG</option>
                                    <option value="Hibrit">Hibrit</option>
                                    <option value="Elektrik">Elektrik</option>
                                </select>
                                <span asp-validation-for="FuelType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="FuelEfficiency" class="control-label">Yakıt Tüketimi (lt/100km)</label>
                                <input asp-for="FuelEfficiency" class="form-control" />
                                <span asp-validation-for="FuelEfficiency" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Transmission" class="control-label">Şanzıman</label>
                                <select asp-for="Transmission" class="form-control">
                                    <option value="">Seçiniz</option>
                                    <option value="Manuel">Manuel</option>
                                    <option value="Otomatik">Otomatik</option>
                                    <option value="Yarı Otomatik">Yarı Otomatik</option>
                                    <option value="CVT">CVT</option>
                                    <option value="DCT">DCT</option>
                                    <option value="PDK">PDK</option>
                                </select>
                                <span asp-validation-for="Transmission" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="BodyType" class="control-label">Kasa Tipi</label>
                                <select asp-for="BodyType" class="form-control">
                                    <option value="">Seçiniz</option>
                                    <option value="Sedan">Sedan</option>
                                    <option value="Hatchback">Hatchback</option>
                                    <option value="SUV">SUV</option>
                                    <option value="Coupe">Coupe</option>
                                    <option value="Convertible">Convertible</option>
                                    <option value="Station Wagon">Station Wagon</option>
                                    <option value="MPV">MPV</option>
                                </select>
                                <span asp-validation-for="BodyType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Doors" class="control-label">Kapı Sayısı</label>
                                <select asp-for="Doors" class="form-control">
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                                <span asp-validation-for="Doors" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="CarTypeId" class="control-label">Araç Kategorisi</label>
                                <select asp-for="CarTypeId" class="form-control" asp-items="ViewBag.CarTypes"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="IsAvailable" class="control-label">Satışta mı?</label>
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="IsAvailable" class="form-check-input" />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="control-label">Resim URL'i</label>
                        <div class="input-group">
                            <input asp-for="ImageUrl" class="form-control" />
                            <div class="input-group-append">
                                <div class="form-check form-switch ms-2 mt-2">
                                    <input class="form-check-input" type="checkbox" id="updateImage" name="updateImage" value="true">
                                    <label class="form-check-label" for="updateImage">Otomatik Resim Ata</label>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <small class="form-text text-muted">"Otomatik Resim Ata" seçeneğini işaretlerseniz, marka ve modele göre otomatik olarak uygun bir resim atanacaktır.</small>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Features" class="control-label">Özellikler</label>
                        <textarea asp-for="Features" class="form-control" rows="3" placeholder="Örn: Deri koltuk, Navigasyon, Geri görüş kamerası..."></textarea>
                        <span asp-validation-for="Features" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h4>Bilgi</h4>
            </div>
            <div class="card-body">
                <p>Tüm zorunlu alanları doldurun.</p>
                <p>"Satışta mı?" durumunu değiştirebilirsiniz. Araç satıldıysa veya geçici olarak satıştan kaldırıldıysa bu seçeneği kapatın.</p>
                <p>İndirim yüzdesi girilirse, indirimli fiyat otomatik olarak hesaplanacaktır.</p>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4>Araç Resmi</h4>
                </div>
                <div class="card-body p-0">
                    <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Brand @Model.Model" />
                </div>
                <div class="card-footer">
                    <p class="small text-muted">Resmin araç marka ve modeliyle uyumlu olmadığını düşünüyorsanız, "Otomatik Resim Ata" seçeneğini işaretleyerek güncelleyebilirsiniz.</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}