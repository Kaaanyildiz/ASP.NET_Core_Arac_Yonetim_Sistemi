@model identityApp.Models.Car

@{
    ViewData["Title"] = "Araç Düzenle";
}

<div class="page-banner" data-aos="fade-down">
    <div class="banner-content">
        <h1>Araç Düzenle</h1>
        <p>Araç bilgilerini güncelleyin</p>
    </div>
</div>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8" data-aos="fade-up">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-gradient text-white" style="background-color: #4e73df;">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Araç Bilgilerini Güncelle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Brand" class="control-label fw-bold"><i class="bi bi-tag me-1"></i>Marka</label>
                                    <input asp-for="Brand" class="form-control" />
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Model" class="control-label fw-bold"><i class="bi bi-card-text me-1"></i>Model</label>
                                    <input asp-for="Model" class="form-control" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Year" class="control-label fw-bold"><i class="bi bi-calendar me-1"></i>Yıl</label>
                                    <input asp-for="Year" class="form-control" />
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Color" class="control-label fw-bold"><i class="bi bi-palette me-1"></i>Renk</label>
                                    <input asp-for="Color" class="form-control" />
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Mileage" class="control-label fw-bold"><i class="bi bi-speedometer2 me-1"></i>Kilometre</label>
                                    <input asp-for="Mileage" class="form-control" />
                                    <span asp-validation-for="Mileage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="control-label fw-bold"><i class="bi bi-currency-dollar me-1"></i>Fiyat</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DiscountPercentage" class="control-label fw-bold"><i class="bi bi-percent me-1"></i>İndirim (%) (opsiyonel)</label>
                                    <input asp-for="DiscountPercentage" class="form-control" />
                                    <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="EngineSize" class="control-label fw-bold"><i class="bi bi-gear me-1"></i>Motor Hacmi</label>
                                    <input asp-for="EngineSize" class="form-control" />
                                    <span asp-validation-for="EngineSize" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="FuelType" class="control-label fw-bold"><i class="bi bi-fuel-pump me-1"></i>Yakıt Tipi</label>
                                    <select asp-for="FuelType" class="form-select">
                                        <option value="">Seçiniz</option>
                                        <option value="Benzin">Benzin</option>
                                        <option value="Dizel">Dizel</option>
                                        <option value="LPG">LPG</option>
                                        <option value="Hibrit">Hibrit</option>
                                        <option value="Elektrik">Elektrik</option>
                                    </select>
                                    <span asp-validation-for="FuelType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="FuelEfficiency" class="control-label fw-bold"><i class="bi bi-speedometer me-1"></i>Yakıt Tüketimi (lt/100km)</label>
                                    <input asp-for="FuelEfficiency" class="form-control" />
                                    <span asp-validation-for="FuelEfficiency" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Transmission" class="control-label fw-bold"><i class="bi bi-gear-wide me-1"></i>Şanzıman</label>
                                    <select asp-for="Transmission" class="form-select">
                                        <option value="">Seçiniz</option>
                                        <option value="Manuel">Manuel</option>
                                        <option value="Otomatik">Otomatik</option>
                                        <option value="Yarı Otomatik">Yarı Otomatik</option>
                                        <option value="CVT">CVT</option>
                                        <option value="DCT">DCT</option>
                                        <option value="PDK">PDK</option>
                                    </select>
                                    <span asp-validation-for="Transmission" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="BodyType" class="control-label fw-bold"><i class="bi bi-car-front me-1"></i>Kasa Tipi</label>
                                    <select asp-for="BodyType" class="form-select">
                                        <option value="">Seçiniz</option>
                                        <option value="Sedan">Sedan</option>
                                        <option value="Hatchback">Hatchback</option>
                                        <option value="SUV">SUV</option>
                                        <option value="Coupe">Coupe</option>
                                        <option value="Convertible">Convertible</option>
                                        <option value="Station Wagon">Station Wagon</option>
                                        <option value="MPV">MPV</option>
                                    </select>
                                    <span asp-validation-for="BodyType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Doors" class="control-label fw-bold"><i class="bi bi-door-open me-1"></i>Kapı Sayısı</label>
                                    <select asp-for="Doors" class="form-select">
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                    <span asp-validation-for="Doors" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CarTypeId" class="control-label fw-bold"><i class="bi bi-car-front me-1"></i>Araç Kategorisi</label>
                                    <select asp-for="CarTypeId" class="form-select" asp-items="ViewBag.CarTypes"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IsAvailable" class="control-label fw-bold"><i class="bi bi-check-circle me-1"></i>Satışta mı?</label>
                                    <div class="form-check form-switch mt-2">
                                        <input asp-for="IsAvailable" class="form-check-input" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="control-label fw-bold"><i class="bi bi-image me-1"></i>Resim URL'i</label>
                            <div class="input-group">
                                <input asp-for="ImageUrl" class="form-control" />
                                <div class="input-group-append">
                                    <div class="form-check form-switch ms-2 mt-2">
                                        <input class="form-check-input" type="checkbox" id="updateImage" name="updateImage" value="true">
                                        <label class="form-check-label" for="updateImage">Otomatik Resim Ata</label>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <small class="form-text text-muted">"Otomatik Resim Ata" seçeneğini işaretlerseniz, marka ve modele göre otomatik olarak uygun bir resim atanacaktır.</small>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Features" class="control-label fw-bold"><i class="bi bi-list-check me-1"></i>Özellikler</label>
                            <textarea asp-for="Features" class="form-control" rows="3" placeholder="Örn: Deri koltuk, Navigasyon, Geri görüş kamerası..."></textarea>
                            <span asp-validation-for="Features" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label fw-bold"><i class="bi bi-text-paragraph me-1"></i>Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-save me-2"></i>Güncelle
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4 ms-2">
                                <i class="bi bi-arrow-left me-2"></i>Listeye Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-left" data-aos-delay="200">
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-gradient text-white" style="background-color: #1cc88a;">
                    <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>Araç Önizleme</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img id="carImage" src="@Model.ImageUrl" alt="@Model.Brand @Model.Model" class="img-fluid rounded shadow-sm" style="max-height: 200px; object-fit: cover;" onerror="this.src='/images/car-placeholder.jpg'; this.onerror=null;">
                    </div>
                    
                    <div class="car-preview p-3 bg-light rounded">
                        <h5 class="text-primary"><i class="bi bi-car-front me-2"></i><span id="previewBrand">@Model.Brand</span> <span id="previewModel">@Model.Model</span></h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span><i class="bi bi-calendar-date me-1"></i> <span id="previewYear">@Model.Year</span></span>
                            <span><i class="bi bi-palette me-1"></i> <span id="previewColor">@Model.Color</span></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span><i class="bi bi-speedometer2 me-1"></i> <span id="previewMileage">@Model.Mileage</span> km</span>
                            <span><i class="bi bi-fuel-pump me-1"></i> <span id="previewFuel">@Model.FuelType</span></span>
                        </div>
                        <div class="price-tag mt-2">
                            <span class="fs-4 fw-bold text-success">₺<span id="previewPrice">@Model.Price</span></span>
                            @if (Model.DiscountPercentage > 0)
                            {
                                <span class="badge bg-danger ms-2"><i class="bi bi-percent me-1"></i><span id="previewDiscount">@Model.DiscountPercentage</span>%</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // AOS kütüphanesi için animasyonları başlat
        $(document).ready(function() {
            AOS.init({
                duration: 800,
                once: true
            });
            
            // Canlı önizleme için input değişikliklerini izle
            $('#Brand').on('input', function() {
                $('#previewBrand').text($(this).val());
            });
            
            $('#Model').on('input', function() {
                $('#previewModel').text($(this).val());
            });
            
            $('#Year').on('input', function() {
                $('#previewYear').text($(this).val());
            });
            
            $('#Color').on('input', function() {
                $('#previewColor').text($(this).val());
            });
            
            $('#Mileage').on('input', function() {
                $('#previewMileage').text($(this).val());
            });
            
            $('#FuelType').on('change', function() {
                $('#previewFuel').text($(this).val());
            });
            
            $('#Price').on('input', function() {
                $('#previewPrice').text($(this).val());
            });
            
            $('#DiscountPercentage').on('input', function() {
                $('#previewDiscount').text($(this).val());
            });
            
            $('#ImageUrl').on('input', function() {
                $('#carImage').attr('src', $(this).val());
            });
        });
    </script>
}