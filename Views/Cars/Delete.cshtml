@model identityApp.Models.Car

@{
    ViewData["Title"] = "Araç Sil";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h1>Araç Sil</h1>
            <h4>Bu aracı silmek istediğinize emin misiniz?</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Brand @Model.Model">
                    }
                    else
                    {
                        <img src="/images/default-car.jpg" class="img-fluid rounded mb-3" alt="@Model.Brand @Model.Model">
                    }
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Marka:</dt>
                        <dd class="col-sm-8">@Model.Brand</dd>
                        
                        <dt class="col-sm-4">Model:</dt>
                        <dd class="col-sm-8">@Model.Model</dd>
                        
                        <dt class="col-sm-4">Yıl:</dt>
                        <dd class="col-sm-8">@Model.Year</dd>
                        
                        <dt class="col-sm-4">Renk:</dt>
                        <dd class="col-sm-8">@Model.Color</dd>
                        
                        <dt class="col-sm-4">Motor:</dt>
                        <dd class="col-sm-8">@Model.EngineSize</dd>
                        
                        <dt class="col-sm-4">Kilometre:</dt>
                        <dd class="col-sm-8">@Model.Mileage.ToString("N0") km</dd>
                        
                        <dt class="col-sm-4">Fiyat:</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C0")</dd>
                        
                        <dt class="col-sm-4">Durum:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Satılık</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Satıldı</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            
            <div class="alert alert-danger mt-4">
                <i class="bi bi-exclamation-triangle"></i> Uyarı: Bu işlem araba kaydını listeden kaldıracaktır. İşlem geri alınamaz.
            </div>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Aracı Sil</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal Et</a>
                </div>
            </form>
        </div>
    </div>
</div>