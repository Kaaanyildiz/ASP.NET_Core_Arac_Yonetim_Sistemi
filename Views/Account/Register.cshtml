@model identityApp.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5 fade-in-up">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background: var(--card-bg); color: var(--text-color);">
                <div class="card-body">
                    <h2 class="mb-4 text-center" style="color: var(--text-color);">Kayıt Ol</h2>
                    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="row g-3">
                        <div class="col-12">
                            <label asp-for="UserName" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="UserName" class="form-control" style="color: var(--text-color); background: var(--card-bg);" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="FullName" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="FullName" class="form-control" style="color: var(--text-color); background: var(--card-bg);" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Email" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="Email" class="form-control" style="color: var(--text-color); background: var(--card-bg);" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Password" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="Password" class="form-control" style="color: var(--text-color); background: var(--card-bg);" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="ConfirmPassword" class="form-label" style="color: var(--text-color);"></label>
                            <input asp-for="ConfirmPassword" class="form-control" style="color: var(--text-color); background: var(--card-bg);" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}