@model IEnumerable<IdentityUser>

<a class="btn btn-primary mb-3" asp-action="Create">Kullanıcı Oluştur</a>
<hr>

<table class="table table-sm table-bordered" style="background: var(--card-bg); color: var(--text-color);">
    <thead>
        <tr>
            <th>Kullanıcı ID</th>
            <th>Kullanıcı Adı</th>
            <th>E-posta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>