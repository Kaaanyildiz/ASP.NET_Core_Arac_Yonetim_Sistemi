@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Kullanıcıyı Sil";
}

<div class="container py-5 fade-in-up">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background: var(--card-bg); color: var(--text-color);">
                <div class="card-body">
                    <h2 class="mb-4 text-center text-danger">Kullanıcıyı Sil</h2>
                    <p class="text-center">Bu kullanıcıyı silmek istediğinize emin misiniz?</p>
                    <ul class="list-group mb-3">
                        <li class="list-group-item" style="background: var(--card-bg); color: var(--text-color);"><strong>Kullanıcı Adı:</strong> @Model.UserName</li>
                        <li class="list-group-item" style="background: var(--card-bg); color: var(--text-color);"><strong>E-posta:</strong> @Model.Email</li>
                    </ul>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100">Evet, Sil</button>
                        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Vazgeç</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
